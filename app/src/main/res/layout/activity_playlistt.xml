<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button1"
            android:background="#FAFAFA"
            android:id="@+id/nowplaying"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button2"
            android:background="#C89388"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button3"
            android:background="#FAFAFA"
            android:id="@+id/track"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button4"
            android:layout_weight="1"
            android:background="#FAFAFA"
            android:id="@+id/album"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Playlist"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/add"
        android:id="@+id/newplay"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/add"
        android:layout_marginTop="80dp"
        android:id="@+id/add"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/elsueno"
        android:layout_below="@id/add"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/recent"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recent"
        android:layout_marginLeft="20dp"
        android:text="Recenntly Added"
        android:textSize="17sp"
        />
    <ImageView
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/recent"
        android:layout_below="@+id/add"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/halfgirlfriend"
        android:id="@+id/gf"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gf"
        android:layout_toRightOf="@id/recent"
        android:layout_marginLeft="90dp"
        android:text="Most Played"
        android:textSize="17sp"
        />
</RelativeLayout>
